    {# BEGIN CSS IMPORTS #}
    {% include "../components/blocks/cssMinifier.block.njk" %}
    {# END CSS IMPORTS #}

    <title>{{ title }}</title>

    <style>
      #animated-header {
        position: relative;
        width: 100vw;
        height: 8em;
      }

      #animated-header h2 {
        display: none;
