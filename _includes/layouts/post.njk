        /* color: #565A70 !important; */
        /* color: white !important;
        z-index: 2;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        display: flex;
        align-items: center;
        justify-content: center; */
      }

      #animated-header img {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        object-fit: cover;
        z-index: 0;
      }

      #animated-header::before {
        /* content: '';
        position: absolute;
        inset: 0;
