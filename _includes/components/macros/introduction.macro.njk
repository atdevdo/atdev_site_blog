{% macro macro_intro(text_1, banner, mobile_banner) %}
    <div class="intro">
        <h3 class="intro_text1">{{ text_1 }}</h3>
        <picture>
            <source media="(max-width: 500px)" srcset="{{mobile_banner}}">
            <img src="{{banner}}" alt="image">
        </picture>
    </div>
{% endmacro %}