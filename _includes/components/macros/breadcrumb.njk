{% macro breadcrumb(home_link, blog_link, category_link, page_url, categories, locale, category, post_title) %}
	{# BEGIN MATERIAL ICONS - HOME #}
	<link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@48,500,0,200"/>
	{# END MATERIAL ICONS - HOME #}

	<style>
		#breadcrumb * {
			color: #3C8CCB !important;
		}

		#breadcrumb {
			width: 100%;
			padding-left: 8em;
		}

		#breadcrumb a,
		#breadcrumb b,
		#breadcrumb span {
			display: flex;
			align-items: center;
			justify-content: center;
			flex-direction: column;
		}

		#breadcrumb a,
		#breadcrumb b,
		#breadcrumb p,
		#breadcrumb span {
			font-size: 0.9rem !important;
		}

		#breadcrumb p {
			display: flex;
			align-items: center;
			flex-wrap: wrap;
			gap: .4rem;
			margin-top: 3rem;
			margin-bottom: -1rem;
		}

		#breadcrumb a {
			color: #54647a;
		}

		.material-symbols-outlined {
			padding-top: 0.03rem;
		}

		#breadcrumb-post_title {
			padding-left: 0 !important;
		}

		@media only screen and (max-width: 500px) {
			#breadcrumb {
				display: flex;
				align-items: center;
				justify-content: center;
			}

			#breadcrumb p {
				padding-left: 0 !important;
			}

			#breadcrumb-post_title {
				margin: 0 !important;
			}
		}

		@media only screen and (min-width: 2000px) {}
	</style>

	<div id="breadcrumb">
		{% if category == undefined %}
			<p>
				<a href="{{home_link}}" class="material-symbols-outlined">home</a>
				<span>></span>
				<b style="font-family: figtree,Lato,figtree,'Plus Jakarta Sans',sans-serif;">Blog</b>
			</p>

		{% endif %}

		{% if category != undefined %}
			{% if post_title != undefined %}
				{% for item in categories.en %}
					{% if item == category %}
						<p id="breadcrumb-post_title">
							<a href="{{home_link}}" class="material-symbols-outlined">home</a>
							<span>></span>
							<a href="{{blog_link}}">Blog</a>
							<span>></span>
							<a href="{{category_link}}" class="breadcrumb-category">{{categories[locale][loop.index0] | capitalize}}</a> > <b class="breadcrumb-post_title" style="font-family: figtree,Lato,figtree,'Plus Jakarta Sans',sans-serif; margin-bottom: 0;">{{post_title | capitalize}}</b>
						</p>
					{% endif %}
				{% endfor %}
			{% else %}
				{% for item in categories.en %}
					{% if item == category %}
						<p>
							<a href="{{home_link}}" >
								<span class="material-symbols-outlined">home</span></a>
							<span>></span>
							<a href="{{blog_link}}">Blog</a>
							<span>></span>
							<b class="breadcrumb-category" style="font-family: figtree,Lato,figtree,'Plus Jakarta Sans',sans-serif;">{{categories[locale][loop.index0] | capitalize}}</b>
						</p>
					{% endif %}
				{% endfor %}
			{% endif %}
		{% endif %}
	</div>
{% endmacro %}