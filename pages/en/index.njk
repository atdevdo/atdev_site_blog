---
permalink: /pages/en/
title: 'ATDEV Blog'
layout: 'layouts/base.njk'
tags: 'en'
locale: 'en'
dir: 'ltr'
---
{# BEGIN MACROS - IMPORTS #}
{% from "../../_includes/components/macros/sort-posts.macro.njk" import macro_sorted_list_title %}
{% from "../../_includes/components/macros/sort-posts.macro.njk" import macro_sorted_list_time %}
{% from "../../_includes/components/macros/sort-posts.macro.njk" import macro_sorted_list_category %}
{% from "../../_includes/components/macros/sort-posts.macro.njk" import macro_sorted_list_date %}
{% from "../../_includes/components/macros/sort-posts.macro.njk" import macro_no_sort %}
{% from "../../_includes/components/macros/category-post.macro.njk" import macro_category_post %}
{% from "../../_includes/components/macros/atdev.macro.njk" import macro_atdev %}
{% from "../../_includes/components/macros/category.macro.njk" import macro_category %}
{# END MACROS - IMPORTS #}

{% if collections.decapPostsEs | length != 0 %}
	{# BEGIN FILTER - SORTING #}
	<div id="filter-sort-container">
		<div id="filterbox">
			<div class="field">
				<input type="search" placeholder="Search..." id="searchField"/>
			</div>
			<ol id="searchResults"></ol>
			<div id="noResultsFound" style="display: none">
				<p>No results found.</p>
			</div>
		</div>

		<div id="sort-by-title-box">
			<h2>SORT BY</h2>
		</div>

		<div id="sort-controls">
			<button id="sort-btn-title">
				<p>Title</p>
				<img src="/assets/icons/sort-az.webp" alt="sort az"/>
			</button>
			<button id="sort-btn-time-read">
				<p>Time</p>
				<img src="/assets/icons/sort-time-read.webp" alt="sort time to read"/>
			</button>
			<button id="sort-btn-category">
				<P>Category</P>
				<img src="/assets/icons/sort-category.webp" alt="sort category"/>
			</button>
			<button id="sort-btn-date">
				<p>Date</p>
				<img src="/assets/icons/release-date-icon.webp" alt="sort date"/>
			</button>
		</div>
	</div>
	{# END FILTER - SORTING #}

	{# BEGIN POST LIST #}
	<div id="sorting">
		<div id="sorted-title" style="display: none;">
			{{ macro_sorted_list_title(collections.sortedByTitleEn, 7, categories, locale) }}
		</div>

		<div id="sorted-time" style="display: none;">
			{{ macro_sorted_list_time(collections.sortedByTimeEn, 7, categories, locale) }}
		</div>

		<div id="sorted-category" style="display: none;">
			{{ macro_sorted_list_category(collections.sortedByCategoryEn, 7, categories, locale) }}
		</div>

		<div id="sorted-date" style="display: none;">
			{{ macro_sorted_list_date(collections.sortedByDateEn, 7, categories, locale) }}
		</div>

		<div id="not-sorted">
			{{ macro_no_sort(collections.decapPostsEn, categories, locale) }}
		</div>
	</div>
	{# END POST LIST #}

	{# BEGIN CATEGORIES #}

	{# BEGIN TECHNOLOGY - CATEGORY #}
	{{macro_category('Technology', 'View More', "/categories/en/technology/1", collections.technologyCollectionEn, 'technology', 0, 7, categories, locale, 'No Posts Available')}}
	{# END TECHNOLOGY - CATEGORY #}

	{# BEGIN ATDEV CUSTOM SOFTWARE DEVELOPMENT #}
	{{
  macro_atdev(
    'atdev-content-customsd',
    'Custom Software Development',
    'https://atdev-testing.netlify.app/pages/en/services/app-development/',
    '/assets/images/customsd.jpg',
    'Custom Software Development Image'
  )
}}
	{# END ATDEV CUSTOM SOFTWARE DEVELOPMENT #}

	{# BEGIN COMMUNITY - CATEGORY #}
	{{macro_category('Community', 'View More', "/categories/en/community/1", collections.communityCollectionEn, 'community', 0, 7, categories, locale, 'No Posts Available')}}
	{# END COMMUNITY - CATEGORY #}

	{# BEGIN ATDEV ABOUT #}
	{{
  macro_atdev(
    'atdev-content-about',
    'About Us',
    'https://atdev-testing.netlify.app/pages/en/about/',
    '/assets/images/about.jpg',
    'About Image'
  )
}}
	{# END ATDEV ABOUT #}

	{# BEGIN GROWTH - CATEGORY #}
	{{macro_category('Growth', 'View More', "/categories/en/growth/1", collections.growthCollectionEn, 'growth', 0, 7, categories, locale, 'No Posts Available')}}
	{# END GROWTH - CATEGORY #}

	{# BEGIN ATDEV NEARSHORE #}
	{{
  macro_atdev(
    'atdev-content-nearshore',
    'Nearshore Augmentation',
    'https://atdev-testing.netlify.app/pages/en/services/nearshore/',
    '/assets/images/nearshore.jpg',
    'Nearshore Image'
  )
}}
	{# END ATDEV NEARSHORE #}

	{# BEGIN REMOTE WORK - CATEGORY #}
	{{macro_category('Remote Work', 'View More', "/categories/en/remote-work/1", collections.remoteWorkCollectionEn, 'remote-work', 0, 7, categories, locale, 'No Posts Available')}}
	{# END REMOTE WORK - CATEGORY #}

	{# END CATEGORIES #}

{% else %}
	<h2 style="text-align: center; height: 300px; display: flex; align-items: center; justify-content: center;">No Posts Available</h2>
{% endif %}